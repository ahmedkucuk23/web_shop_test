<!-- app/views/teddies/show.html.erb -->
<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@teddy.photo_url, width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h1 class="text"><%= @teddy.name %></h1>
      <p class="text">Some awesome description of our amazing teddy.</p>
      <p class="text">Amount: <%= humanized_money_with_symbol(@teddy.price) %></p>

      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'teddy_id', @teddy.id %>
         <li class="content__item">
            <button class="button button--mimas">
              <span>
                <%= submit_tag 'Purchase' %>
              </span>
            </button>
          </li>
      <% end %>

    </div>
  </div>
</div>
